<div class="panel panel-default assignment-detail">
  <div class="panel-heading">
      <div class="actions">
          {{#if isTeacher}}
              <button class="btn btn-default launch" {{action 'openRealTime'}}><span class="real-time-icon"></span>{{t 'assignment-details.launch'}}</button>
              <button class="btn btn-default delete">{{gru-icon name='delete'}}</button>
              <button class="btn btn-default add-student" {{action 'addStudent'}}>{{gru-icon name='person_add'}}</button>
              <button class="btn btn-default preview" {{action 'previewPlayer' assignment}}>{{t 'assignment-details.preview'}}</button>
            {{else}}
              <button class="btn btn-default play" {{action 'openPlayer' assignment}}>{{t 'common.play'}}</button>
          {{/if}}
      </div>
  </div>
  <div class="panel-body">
      {{#unless isTeacher}}
          <div class="text-container">
            <div class="attempts-left">
              <span>{{t 'assignment-details.attempts-left' attempts=assignment.attempts count=assignment.totalAttempts}}</span>
            </div>
            <div class="last-attempt">
             <span>{{t 'assignment-details.lastAttempt'}}</span>
             <span class="score" style={{scoreStyle}}>
              {{if assignment.score assignment.score '--'}}%
            </span>
            </div>
          </div>
        {{/unless}}
      <div class="text-container">
          <div class="title">
              <span><b>{{t 'assignments-view.title'}}: </b>{{assignment.title}}</span>
          </div>
          {{#if isTeacher}}
              <span class="teacher-question"><b>{{t 'assignment-details.questions'}}:</b> {{assignment.questions.length}}</span>
          {{/if}}
      </div>
      <div class="text-container">
          {{#if isTeacher}}
              <div class="date-modified">
                  <span><b>{{t 'assignments-view.dateModified'}}: </b> {{format-date assignment.modifiedDate 'h:mm a MM/DD/YYYY'}}</span>
              </div>
          {{else}}
            <div class="questions">
                <span><b>{{t 'assignment-details.questions'}}:</b> {{assignment.questions.length}}</span>
            </div>
            <div class="date-assigned">
                <span><b>{{t 'assignments-view.date'}}: </b> {{format-date assignment.assignedDate 'h:mm a MM/DD/YYYY'}}</span>
            </div>
          {{/if}}
      </div>
      <div class="learning-objective">
          <span><b>{{t 'assignment-details.learningObjective'}}: </b>{{assignment.learningObjective}}</span>
      </div>
      <div class="standards">
          <span><b>{{t 'assignments-view.standards'}}: </b></span>
      </div>
      {{#if isTeacher}}
          <div class="due-date">
              <span><b>{{t 'assignments-view.dueDate'}}: </b>{{format-date assignment.dueDate 'h:mm a MM/DD/YYYY'}}</span>
          </div>
      {{/if}}
      <div class="navigation">
          <span><b>{{t 'assignment-details.navigation'}}: </b>{{assignment.settings.navigation}}</span>
      </div>
      <div class="attempts">
          <span><b>{{t 'assignment-details.attempts'}}: </b>{{assignment.totalAttempts}}</span>
      </div>
      <div class="show-score">
          <span><b>{{t 'assignment-details.show-score'}}: </b>{{assignment.settings.showScore}}</span>
      </div>
      <div class="answer-key">
          <span><b>{{t 'assignment-details.answer-key'}}: </b>{{if assignment.settings.answerKey (t 'assignment-details.on') (t 'assignment-details.off')}}</span>
      </div>
  </div>
</div>
