<div class="controller content-collections">
  <div class="collections">
    {{#each collections as |collection|}}
      <div class="card">
        {{new-cards.gru-collection-card
          profile=sessionProfile
          content=collection
          isMyProfile=isMyProfile
          classroomList=activeClasses
          classStudentCount=myClasses.memberCount
          isOnProfile=true
          publishVisible=true
          onOpenContentPlayer="openContentPlayer"
          onEditContent="editCollection"
          onOpenIndependentPlayer="playIndependentContent"
          onBookmarkContent="onBookmarkContent"
        }}
      </div>

    {{else}}

      <div class="panel add-content panel-default">
        <div class="panel-body">
          {{gru-icon name='explore'}}

          {{#if isMyProfile}}
            <p>{{{t "common.add-content-prompt" type=(t "common.a-collection")}}}</p>
            <button class="btn btn-success" {{action "showModal" "content.modals.gru-collection-new"}}>
              {{t "common.add"}} {{t "common.collection"}}
            </button>
          {{else}}
            <p>{{{t "common.no-collections-to-display"}}}</p>
          {{/if}}
        </div>
      </div>

    {{/each}}
  </div>
  {{#if showMoreResultsButton}}
    <span class="show-more-results" {{action 'showMoreResults'}}>{{t "common.show-more-results"}}</span>
  {{/if}}
</div>
