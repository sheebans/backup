<div class="controller content-resources">
  <div class="resources clearfix">
    {{#each resources as |resource|}}
      <div class="card">
        {{cards.gru-resource-card
          resource=resource
          publishVisible=true
          isOnProfile=true
          editEnabled=(eq resource.owner.id currentUserId)
          onEditResource="editResource"
          onPlayResource="playResource"}}
      </div>
    {{else}}
      <div class="panel add-content panel-default">
        <div class="panel-body">
          {{gru-icon name='explore'}}
          {{#if isMyProfile}}
            <p>{{{t "common.add-content-prompt" type=(t "common.a-resource")}}}</p>
            <button class="btn btn-success" {{action "showModal" "content.modals.gru-resource-new"}}>
              {{t "common.add"}} {{t "common.resource"}}
            </button>
          {{else}}
            <p>{{{t "common.no-resources-to-display"}}}</p>
          {{/if}}
        </div>
      </div>
    {{/each}}
  </div>
  {{#if showMoreResultsButton}}
    <span class="show-more-results" {{action 'showMoreResults'}}>{{t "common.show-more-results"}}</span>
  {{/if}}
</div>
