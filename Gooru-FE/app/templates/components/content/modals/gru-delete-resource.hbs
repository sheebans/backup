<div class="modal-header delete">
  <h4 class="modal-title">{{t "common.delete"}} {{t (concat 'common.' model.type)}}</h4>
</div>
<div class="modal-body">
  <form>
    <p class="legend">{{t "content.modals.delete-resource.legend" title=model.content.title}}</p>
    <div class="delete-info">
      <ul>
        <li>
          <label>
            {{input type="checkbox" checked=validator.check1}}
            <span>{{t "content.modals.delete-resource.first-check"}}</span>
          </label>
        </li>
        <li>
          <label>
            {{input type="checkbox" checked=validator.check2}}
            <span>{{t "content.modals.delete-resource.second-check"}}</span>
          </label>
        </li>
      </ul>
    </div>
    <div class="actions delete">
      <button type="button" class="btn btn-default cancel" data-dismiss="modal" aria-label="{{t 'common.close'}}">
        <span aria-hidden="true">{{t 'common.cancel'}}</span>
      </button>
      {{#gru-spinner-button classes='btn btn-danger delete' text=(t 'common.loading') isLoading=isLoading}}
          <button class="btn btn-danger delete" disabled={{isDisabled}} {{action "deleteContent" model}}>{{t 'content.modals.quick-delete-content.delete'}}</button>
      {{/gru-spinner-button}}
    </div>
  </form>
</div>
