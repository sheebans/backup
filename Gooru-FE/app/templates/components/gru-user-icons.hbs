<a class="first-view">
  <ul>
    <li class="item num-left">
      {{gru-icon name="group"}}<span>{{membersCount}}</span>
    </li>
    {{#if showMoreUsers}}
        <li class="item num-left pointer">
            <span {{action 'showMoreUsers'}}>{{remainingUsersNumber}}+</span>
        </li>
    {{/if}}
  </ul>
</a>
{{#if showMoreUsers}}
  <div class="remaining modal fade">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title">{{t "common.numberStudents" count=users.length}}</h4>
        </div>
        <div class="modal-body">
          <ul>
            {{#each usersSorted as |entity|}}
              <li class="item user {{if entity.isActive 'active' ''}}">
                <img class="img-circle" src="{{entity.avatarUrl}}" title="{{entity.fullName}}" />
                <span class="user-name">{{entity.firstName}} {{entity.lastName}}</span>
              </li>
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </div>
{{/if}}
