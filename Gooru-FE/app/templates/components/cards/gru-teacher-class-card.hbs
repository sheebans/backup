<div class="panel">
  {{#link-to 'teacher.class.course-map' class.id}}
    <div class="panel-heading">
      <div class="title ellipsis">
        <h5>{{class.title}}</h5>
      </div>
      <div class="code">
        <span>{{class.code}}</span>
      </div>
    </div>
  {{/link-to}}
  <div class="panel-body">
    <div class="class-info col-md-4 col-sm-4 col-xs-4">
      <div class="students-info">
        {{gru-icon name="group"}} <span>{{t "cards.gru-class-card.student" count=studentCount}}</span>
      </div>
      <div class="chart">
        {{charts.gru-bubble-chart content=(if class.performanceSummary (concat class.performanceSummary.score '%') '--') color=(grade-color class.performanceSummary.score)}}
        <span class="legend">{{t 'teacher-landing.class.performance'}}</span>
      </div>
    </div>
    <div class="course-info col-md-8 col-sm-8 col-xs-8">
      {{#if course}}
        <div class="legend">{{t 'student-landing.class.assigned-course'}}</div>
        {{cards.gru-course-card course=course isSmall=true showTaxonomy=false}}
      {{else}}
        <div class="legend">{{t 'teacher-landing.no-course'}}</div>
      {{/if}}
    </div>
  </div>
</div>
