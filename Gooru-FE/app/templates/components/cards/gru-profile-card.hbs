<div class="avatar">
  <span class="img-wrapper"><img class="img-responsive" src="{{profile.avatarUrl}}"
                                 alt="{{t "common.avatarFor"}} {{profile.displayName}}"/></span>
  <strong>{{profile.displayName}}</strong>
</div>
<div class="social">
		<span class="followers">
      <em>{{profile.followers}}</em> {{t "cards.gru-profile-card.followers"}}
    </span>
		<span class="following">
      <em>{{profile.followings}}</em> {{t "cards.gru-profile-card.following"}}
    </span>
</div>