<div class="content">
    <div class="navigation-bar {{unless collapsedMenu 'hidden-md hidden-lg'}}">
      <span {{action 'openNavigator'}}>
        {{gru-icon name='keyboard_arrow_down'}} <h5>{{t  "common.menu"}}</h5>
      </span>
    </div>
   {{#if showReactionBar}}
     <div class="reaction-bar col-xs-12">
       <div class="panel panel-default">
           <div class="panel-body">
             {{gru-emotion-picker startEmotion=ratingScore onChangeEmotion="changeEmotion" readOnly=readOnly}}
               <div class="indicators out-of-scope">
                   <span class="context {{if hasContext 'on' 'off'}}"></span>
                   <span class="role {{if isTeacher 'teacher' 'student'}}"></span>
                   <span class="rt {{if notifyingRealTime 'on' 'off'}}"></span>
               </div>
           </div>
       </div>
     </div>
   {{/if}}
</div>
